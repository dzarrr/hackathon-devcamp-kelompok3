<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlanningActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rencana Haji"
        android:textColor="@android:color/black"
        android:fontFamily="@font/alegreya_sans_medium"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:textSize="18sp"
            android:fontFamily="@font/alegreya_sans_medium"
            android:text="Berangkat Tahun"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvRencanaHaji"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/background_btn2"
            android:fontFamily="@font/cantarell_bold"
            android:gravity="center_vertical"
            android:text="2035"
            android:textColor="@android:color/white"
            android:textSize="28sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="5dp"
        android:textSize="18sp"
        android:fontFamily="@font/alegreya_sans_medium"
        android:text="Proyeksi Tabungan"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal"
        tools:layout_editor_absoluteX="0dp">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="250dp"
            tools:layout_editor_absoluteX="0dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvBiayaBulanan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/background_btn2"
        android:fontFamily="@font/cantarell_bold"
        android:text="Rp. 132.111 / bulan"
        android:padding="7dp"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_horizontal  "
        android:layout_height="wrap_content">

        <EditText
            android:hint="Masukkan Dana"
            android:layout_marginTop="10dp"
            android:layout_width="265dp"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginTop="10dp"
            android:text="+ Dana"
            android:textColor="@color/colorWhite"
            android:layout_margin="5dp"
            android:background="@drawable/background_btn"
            android:layout_width="100dp"
            android:layout_height="50dp"/>

    </LinearLayout>

</LinearLayout>
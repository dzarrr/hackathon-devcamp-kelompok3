<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TargetActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/target_haji"
        android:textColor="@android:color/black"
        android:fontFamily="@font/alegreya_sans_medium"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/alegreya_sans_medium"
        android:text="Tahun"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btnKurangTahun"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/left_arrow"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="78dp" />


        <TextView
            android:id="@+id/tvTahun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="24sp"
            android:fontFamily="@font/alegreya_sans_medium"
            android:textColor="@android:color/black"
            android:text="2020"/>

        <Button
            android:id="@+id/btnTambahTahun"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/right_arrow"
            tools:layout_editor_absoluteX="333dp"
            tools:layout_editor_absoluteY="77dp" />

    </LinearLayout>

    <Button
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/background_btn2"
        android:text="Selamat! Kamu berhak untuk daftar haji lebih awal!"
        android:padding="15dp"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:id="@+id/btnNotif"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/alegreya_sans_medium"
        android:text="Investasi"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"

        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/tbInvestasi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:shadowColor="@android:color/darker_gray"
            android:fontFamily="@font/cantarell_bold"
            android:background="@drawable/background_toggle"
            android:textOff="Investasi Syariah Imbalan 5 % per Tahun"
            android:textOn="Investasi Syariah Imbalan 5 % per Tahun" />

        <ToggleButton
            android:id="@+id/tbNonInvestasi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:shadowColor="@android:color/darker_gray"
            android:fontFamily="@font/cantarell_bold"
            android:background="@drawable/background_toggle"
            android:textOff="Non-Investasi"
            android:textOn="Non-Investasi" />




    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/alegreya_sans_medium"
        android:text="Total Biaya Setoran per Bulan"

        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvTotalBiaya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:fontFamily="@font/alegreya_sans_medium"
        android:textSize="23sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/alegreya_sans_medium"
        android:text="Total Biaya yang Harus Dibayarkan : Rp.35.000.000"
        android:textColor="@android:color/secondary_text_dark_nodisable"
        android:textSize="14sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/btnSelesai"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/background_btn"
            android:text="Selesai"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>